<Window x:Class="InvoiceCreatorApp.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="800" Width="400" ResizeMode="NoResize">
	<Grid>
		<Label Content="Benutzername" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0"/>
		<TextBox Name="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="198"/>
		<Label Content="Passwort" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,0,0"/>
		<PasswordBox Name="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,100,0,0" Width="198"/>
		<Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,150,0,0" Click="LoginButton_Click"/>
	</Grid>
</Window>
